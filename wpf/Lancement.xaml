<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf" x:Class="wpf.Lancement" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" >

    <UserControl.Background>
        <ImageBrush ImageSource="Resources/background.png" ></ImageBrush>
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <TextBlock FontWeight="Bold" FontSize="14" TextAlignment="Center">Nouvelle Partie</TextBlock>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"/>
                <ColumnDefinition Width="108"/>
                
            </Grid.ColumnDefinitions>
            <Viewbox Margin="0" Height="30">
                <RadioButton/>
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
    
