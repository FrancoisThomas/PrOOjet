<UserControl x:Class="wpf.Jeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="Window_Loaded">

    <DockPanel>
        <Grid  DockPanel.Dock="Bottom" >
            <!-- Définition du bouton "fin de tour" et association à l'évt Click : => appel à la méthode "Button_Click" -->
            <Button HorizontalAlignment="Center" Content="Fin du tour" />
        </Grid>
        <Grid DockPanel.Dock="Left" Width="400">
            <DockPanel HorizontalAlignment="Left" Height="108" LastChildFill="False" VerticalAlignment="Top" Width="400">
                <Rectangle Height="100" Stroke="Black" StrokeThickness="2" Width="100" Name="tileImage" VerticalAlignment="Center"/>
                <Grid Height="100" Margin="0,0,0,0" VerticalAlignment="Center" Width="300" Name="unitGrid">
                    <Rectangle Name="selectionRectangleUnit" Stroke="Black" StrokeThickness="2" Panel.ZIndex="333" Visibility="Collapsed"/>
                </Grid>
            </DockPanel>
            <StackPanel HorizontalAlignment="Right" Height="386" Margin="0,147,58,0" VerticalAlignment="Top" Width="291">
                <DockPanel Height="50" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40">
                    <Label Name="healthLabel" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="40"/>
                </DockPanel>
                <DockPanel Height="50" LastChildFill="False" Margin="0,10,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Width="40">
                    <Label Name="attackLabel" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="40"/>
                </DockPanel>
                <DockPanel Height="50" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40">
                    <Label Name="defenseLabel" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="40"/>
                </DockPanel>
                <DockPanel Height="50" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="40">
                    <Label Name="movementLabel" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Width="40"/>
                </DockPanel>
            </StackPanel>
        </Grid>
        
        <Grid Name="mapGrid" Background="Azure" DockPanel.Dock="Right" Height="600" Width="600">
            <Rectangle Name="selectionRectangleMap" Stroke="Black" StrokeThickness="2" Panel.ZIndex="333" Visibility="collapsed"/>
            <!-- Chaque case de la grille contient potentiellement un rectangle de selection + une unité (qui ne sera pas sensible aux evts)-->
            <Ellipse Fill="White" Width="10" Height="10" Name="unitEllipse" Panel.ZIndex="444" IsHitTestVisible="False" />


        </Grid>
    </DockPanel>

</UserControl>
